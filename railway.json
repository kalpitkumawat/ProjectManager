{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd ProjectManager.Api && dotnet restore && dotnet publish -c Release -o out"
  },
  "deploy": {
    "startCommand": "cd ProjectManager.Api/out && dotnet ProjectManager.Api.dll",
    "restartPolicyType": "on-failure",
    "restartPolicyMaxRetries": 10
  }
}
